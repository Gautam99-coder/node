<% if (flash) { %>
  <div class="mb-6">
    <% if (flash.type === 'success') { %>
      <div class="bg-green-100 border border-green-300 text-green-800 px-4 py-2 rounded">
        <%= flash.message %>
      </div>
    <% } else { %>
      <div class="bg-red-100 border border-red-300 text-red-800 px-4 py-2 rounded">
        <%= flash.message %>
      </div>
    <% } %>
  </div>
<% } %>
