<% layout('layout') -%>

<div class="max-w-3xl mx-auto">
  <h1 class="text-3xl font-bold mb-4">Task Manager</h1>

  <!-- Add form -->
  <div class="bg-white p-6 rounded shadow mb-6">
    <form action="/tasks" method="post" class="space-y-4">
      <div>
        <label class="block text-sm font-medium">Title</label>
        <input name="title" required class="mt-1 block w-full rounded border-gray-300 shadow-sm" />
      </div>

      <div>
        <label class="block text-sm font-medium">Description</label>
        <textarea name="description" rows="3" class="mt-1 block w-full rounded border-gray-300 shadow-sm"></textarea>
      </div>

      <div>
        <button type="submit" class="px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700">Add Task</button>
      </div>
    </form>
  </div>

  <!-- Tasks list -->
  <div>
    <h2 class="text-xl font-semibold mb-2">Tasks (<%= tasks.length %>)</h2>
    <% if (tasks.length === 0) { %>
      <div class="text-gray-600">No tasks yet â€” add one above.</div>
    <% } %>

    <ul class="space-y-4 mt-4">
      <% tasks.forEach(function(task) { %>
        <li class="bg-white p-4 rounded shadow flex justify-between items-start">
          <div>
            <div class="font-medium"><%= task.title %></div>
            <% if (task.description) { %>
              <div class="text-sm text-gray-600 mt-1"><%= task.description %></div>
            <% } %>
            <div class="text-xs text-gray-400 mt-2">Created: <%= new Date(task.createdAt).toLocaleString() %></div>
          </div>

          <div class="flex items-start space-x-2">
            <!-- delete via POST form -->
            <form action="/tasks/delete/<%= task.id %>" method="post" onsubmit="return confirm('Delete this task?');">
              <button type="submit" class="px-3 py-1 rounded border border-red-400 text-red-600 hover:bg-red-50">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>
</div>
