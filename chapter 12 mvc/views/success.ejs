<!doctype html>
<html lang="en">
  <%- include('partials/head', { title: 'Added - Airbnb Mini' }) %>
  <body class="min-h-screen bg-gray-100 font-sans">
    <div class="max-w-xl mx-auto p-6">
      <div class="bg-white p-6 rounded shadow">
        <h1 class="text-2xl font-bold text-green-700">Home added successfully ✅</h1>

        <div class="mt-4">
          <h2 class="text-lg font-semibold"><%= home.title %></h2>
          <p class="text-sm text-gray-500"><%= home.location %></p>
          <p class="mt-2 font-semibold">₹ <%= home.price %> / night</p>
          <% if (home.description) { %>
            <p class="mt-2 text-gray-700"><%= home.description %></p>
          <% } %>
        </div>

        <div class="mt-6">
          <a href="/" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Back to Home Page</a>
        </div>
      </div>
    </div>
  </body>
</html>
